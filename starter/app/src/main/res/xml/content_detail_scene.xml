<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/tvFile" />
        <Constraint android:id="@+id/tvSuccess" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/tvFile" />
        <Constraint android:id="@+id/tvSuccess" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="2000"
        app:autoTransition="animateToEnd" >
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/tvFile">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0"
                    />
            </KeyAttribute>
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="25"
                app:motionTarget="@id/tvFile">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.25"
                    />
            </KeyAttribute>
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/tvFile">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.5"
                    />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="75"
                app:motionTarget="@id/tvFile">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.75"
                    />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/tvFile">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="1.0"
                    />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/tvSuccess">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0"
                    />
            </KeyAttribute>
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="25"
                app:motionTarget="@id/tvSuccess">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.25"
                    />
            </KeyAttribute>
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="50"
                app:motionTarget="@id/tvSuccess">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.5"
                    />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="75"
                app:motionTarget="@id/tvSuccess">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="0.75"
                    />
            </KeyAttribute>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/tvSuccess">
                <CustomAttribute
                    app:attributeName="alpha"
                    app:customFloatValue="1.0"
                    />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

</MotionScene>
